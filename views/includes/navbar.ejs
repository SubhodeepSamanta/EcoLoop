<style>
    .search-btn{
        background-color: #fe424d;
        color: white;
        border-radius: 25px;
        padding: 0 1rem 0 1rem;
    }
    .search-btn:hover{
        background-color: #fe424d;
        color: white;
    }
    .search-btn i{
        display: inline;
        margin-right: 0.5rem;
    }
    .search-input{
        width: 15rem;
        border-radius: 25px;
        padding: 0.5rem 1rem 0.5rem 1rem;
        font-size: 0.8rem;
    }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/listings"><i class="fa-solid fa-basket-shopping"></i></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link logo" href="/listings">Renture</a>
            </div>

            <div class="navbar-nav ms-auto">
                <form class="d-flex" role="search">
                    <input id="searchinout" class="form-control me-2 search-input" type="search" placeholder="Search things to rent" aria-label="Search">
                    <button id="searchbutton" class="btn search-btn" type="button"><i class="fa-solid fa-magnifying-glass"></i>Search</button>


                  </form>
            </div>

            <div class="navbar-nav ms-auto">
                <a class="nav-link list" href="/listings/new">ListRentables</a>
                <%if(!currUser){%>
                <a class="nav-link" href="/signup"><b>SignUp</b></a>
                <a class="nav-link" href="/login"><b>LogIn</b></a>
                <%}%>
                <%if(currUser){%>
                <a class="nav-link" href="/logout">LogOut</a>
                <%}%>
            </div>
        </div>
    </div>
    </nav>
</nav>

<script>
    document.getElementById('searchbutton').addEventListener('click', (event) => {
    event.preventDefault(); // Prevent default form submission behavior

    const searchQuery = document.getElementById('searchinout').value.trim().toLowerCase();

    if (searchQuery === 'buy' || searchQuery === 'rent' || searchQuery === 'sell' || searchQuery === 'donate') {
        window.location.href = '/listings';
    } else if (searchQuery === 'blogs') {
        window.location.href = '/blogs';
    } else if (searchQuery === 'tutorial') {
        window.location.href = '/tutorial';
    } else {
        alert('Search term not recognized. Please try again.');
    }
});


</script>